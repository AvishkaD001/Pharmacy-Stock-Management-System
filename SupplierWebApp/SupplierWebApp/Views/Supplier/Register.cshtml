@model SupplierWebApp.Models.SupplierRegistrationModel

<h2>Register Supplier</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<style>
   
    h2 {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #333;
    }

    
    .alert {
        padding: 1rem;
        border-radius: 4px;
        margin-bottom: 1.5rem;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    form {
        max-width: 500px;
        margin: 0 auto;
        padding: 1.5rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

        form div {
            margin-bottom: 1rem;
        }

        form label {
            display: block;
            font-weight: bold;
            margin-bottom: 0.5rem;
            color: #333;
        }

        form input[type="text"],
        form input[type="password"],
        form input[type="email"],
        form input[type="tel"] {
            width: 100%;
            padding: 0.5rem;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

            form input[type="text"]:focus,
            form input[type="password"]:focus,
            form input[type="email"]:focus,
            form input[type="tel"]:focus {
                border-color: #66afe9;
                outline: none;
                box-shadow: 0 0 8px rgba(102, 175, 233, 0.6);
            }

        form span {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }

        
        form button {
            padding: 0.5rem 1rem;
            font-size: 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 0.5rem;
        }

            form button[type="submit"] {
                background-color: #007bff;
                color: white;
            }

                form button[type="submit"]:hover {
                    background-color: #0056b3;
                }

            form button[asp-action="Login"] {
                background-color: #28a745;
                color: white;
            }

                form button[asp-action="Login"]:hover {
                    background-color: #218838;
                }
</style>

<form asp-action="Register" method="post">
    <div>
        <label asp-for="CompanyName"></label>
        <input asp-for="CompanyName" />
        <span asp-validation-for="CompanyName"></span>
    </div>
    <div>
        <label asp-for="CompanyRegistrationId"></label>
        <input asp-for="CompanyRegistrationId" />
        <span asp-validation-for="CompanyRegistrationId"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Phone"></label>
        <input asp-for="Phone" />
        <span asp-validation-for="Phone"></span>
    </div>
    <div>
        <label asp-for="ProductCategories"></label>
        <input asp-for="ProductCategories" />
        <span asp-validation-for="ProductCategories"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <button type="submit">Register</button>
    <button asp-action="Login">Login</button>
</form>