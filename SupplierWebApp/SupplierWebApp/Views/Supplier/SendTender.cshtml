@{
    ViewData["Title"] = "Send Tender Proposal";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>



}

<style>

    form {
        max-width: 500px;
        margin: 0 auto;
        padding: 1.5rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

        form div {
            margin-bottom: 1rem;
        }

        form label {
            display: block;
            font-weight: bold;
            margin-bottom: 0.5rem;
            color: #333;
        }

        form input[type="text"],
        form input[type="password"],
        form input[type="email"],
        form input[type="tel"] {
            width: 100%;
            padding: 0.5rem;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

            form input[type="text"]:focus,
            form input[type="password"]:focus,
            form input[type="email"]:focus,
            form input[type="tel"]:focus {
                border-color: #66afe9;
                outline: none;
                box-shadow: 0 0 8px rgba(102, 175, 233, 0.6);
            }

        form span {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }


        form button {
            padding: 0.5rem 1rem;
            font-size: 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 0.5rem;
        }

            form button[type="submit"] {
                background-color: #007bff;
                color: white;
            }

                form button[type="submit"]:hover {
                    background-color: #0056b3;
                }

            form button[asp-action="Login"] {
                background-color: #28a745;
                color: white;
            }

                form button[asp-action="Login"]:hover {
                    background-color: #218838;
                }
</style>

<form method="post" asp-action="SendTender">
    <div class="form-group">
        <label for="CompanyRegistrationId">Company Registration ID</label>
        <input type="text" class="form-control" id="CompanyRegistrationId" name="CompanyRegistrationId" required />
    </div>

    <div class="form-group">
        <label for="TenderDetails">Tender Details</label>
        <textarea class="form-control" id="TenderDetails" name="TenderDetails" rows="4" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Send Tender</button>
</form>
